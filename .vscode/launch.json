        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/endpoint_logger/target/debug/endpoint_logger",
            "args": [],
            "cwd": "${workspaceFolder}/endpoint_logger",
            "preLaunchTask": "cargo build"
